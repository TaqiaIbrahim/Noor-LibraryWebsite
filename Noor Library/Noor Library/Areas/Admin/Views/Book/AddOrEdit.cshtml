@model Book

@{
    ViewData["Title"] = Model.Id > 0 ? "تعديل كتاب" : "اضافة كتاب";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="breadcrumb-wrapper py-3 mb-4">
            <span class="text-muted fw-light"> <a asp-action="Index"> @(Model.Id > 0 ? "تعديل كتاب " + Model.Title: " اضافة كتاب") </a> </span>
        </h4>
        <div class="col-12 col-md-8 col-xl-7 mb-4 mb-md-0">
            <div class="card ">
                <div class="offcanvas-body flex-grow-0 mx-0">
                    <form asp-action="AddOrEdit"  method="post"  enctype="multipart/form-data" >
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" a />
                        <div class="col-sm-12">
                        <label asp-for="Title" class="control-lable"> اسم الكتاب</label>
                        <input asp-for="Title" class="form-control dt-full-name" type="text" placeholder="" aria-label="132456" aria-describedby="basicFullname2">
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12">
                            <label asp-for="Description" class="control-lable"> وصف الكتاب</label>
                            <input asp-for="Description" class="form-control dt-full-name" type="text" placeholder="" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Description" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12">
                            <label asp-for="AuthorId" class="control-lable"> التصنيف</label>
                            <select asp-for="AuthorId" class="form-control dt-full-name" type="text" placeholder="" aria-label="132456" aria-describedby="basicFullname2" asp-items="@(new SelectList(ViewBag.Authors,"Id","Name"))"></select>
                            <span asp-validation-for="AuthorId" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        
                        <div class="col-sm-12">
                            <label asp-for="CategoryId" class="control-lable"> التصنيف</label>
                            <select asp-for="CategoryId"  class="form-control dt-full-name" type="text" placeholder="" aria-label="132456" aria-describedby="basicFullname2" asp-items="@(new SelectList(ViewBag.Categories,"Id","Name"))" ></select>
                            <span asp-validation-for="CategoryId" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12">
                            <label asp-for="Pdf" class="control-lable"> ملف الكتاب </label>
                            <input asp-for="Pdf" class="form-control dt-full-name" type="file" name="pdfFile" accept=".pdf" placeholder="" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Pdf" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12">
                            <label asp-for="Cover" class="control-lable"> غلاف الكتاب</label>
                            <input asp-for="Cover" class="form-control dt-full-name" type="file" name="coverFile" accept="image/*" placeholder="" aria-label="132456" aria-describedby="basicFullname2">
                            <span asp-validation-for="Cover" class="text-danger"></span>
                            <div class="fv-plugins-message-container invalid-feedback"></div>
                        </div>
                        <div class="col-sm-12 mt-5">
                            <button  asp-action="AddOrEdit" type="submit" class="btn btn-primary data-submit me-1 me-sm-3 w-100 ">حفظ</button>
                        </div>
                        <div class="col-sm-12">
                            <a asp-action="Index" class="btn btn-outline-secondary me-1 me-sm-3 w-100 mt-1">
                                إلغاء
                            </a>
                        </div>



                    </form>
                </div>
            </div>




            <!-- / Layout wrapper -->
        </div>
    </div>
</div>

</div>
        </div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

