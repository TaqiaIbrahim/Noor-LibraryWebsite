@model IEnumerable<Book>

@{
    ViewData["Title"] = "الكتب";
}

<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">


        <!-- Users List Table -->
        <div class="card">

            <div class="row gx-3 gy-2 align-items-center mt-1 mb-4 ms-1 me-1">


                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class=" justify-content-end   d-grid gap-2 ">
                            <a asp-action="AddOrEdit">
                                <button class="dt-button add-new btn btn-primary">
                                    <span>
                                        <i class="bx bx-plus me-0 me-lg-2"></i>
                                        <span class="d-none d-lg-inline-block"> اضافة كتب </span>                                    </span>
                                </button>
                            </a>
                        </div>
                    </div>

                </div>
              
                <div class="table-responsive text-nowrap">


                    <table class="table TProject">
                        <thead>
                            <tr>
                                <th>الرقم</th>
                                <th>اسم الكتاب</th>
                                <th>وصف الكتاب</th>
                                <th>المؤلف</th>
                                <th>التصنيف</th>
                                <th>الكتاب</th>
                                <th>الغلاف</th>
                                <th>وقت الإضافة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Title</td>
                                        <td>@item.Description</td>
                                        <td>@item.Author.Name</td>
                                        <td>@item.Category.Name</td>
                                        <td>@item.Pdf</td>
                                    <td><img src="@string.Format("/uploads/Covers/{0}",item.Cover)" width="50" height="50" class="rounded-circle" /></td>
                                        <td>@item.AddOn</td>


                                        <th>
                                            <div class="dropdown">
                                                <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown"
                                                        aria-expanded="false">
                                                    <i class="bx bx-dots-vertical-rounded"></i>
                                                </button>
                                                <div class="dropdown-menu">

                                                    <a asp-action="AddOrEdit" asp-route-id="@item.Id" class="dropdown-item">
                                                        <i class="bx bxs-edit-alt icon-padding edit-color"></i>

                                                        تعديل
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item" onclick="return confirm('هل تريد حذف هذا الحقل؟')" id="confirmText">
                                                        <i class="bx bxs-trash-alt icon-padding delet-color" aria-hidden="true"></i>
                                                        حذف
                                                    </a>





                                                </div>
                                            </div>
                                        </th>



                                    </tr>
                                }
                            
                          


                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
</div>

