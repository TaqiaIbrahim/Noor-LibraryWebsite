@model IEnumerable<UserViewModel>

@{
    ViewData["Title"] = "المستخدمين";
    var index = 1;
}

<!-- Content wrapper -->
<!-- Custom style1 Breadcrumb -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
       

        <!-- Users List Table -->
        <div class="card col-md-12">

            <div class="row  gx-3 gy-2 align-items-center mt-1 mb-4 ms-1 me-1">
@* 

                <div class="col-md-12">
                    <div class="col-md-12">
                        <div class=" justify-content-center  d-grid gap-2 ">
                        </div>
                    </div>
                </div> *@

                <div class="table-responsive  text-nowrap">


                    <table class="table TProject">
                        <thead>
                            <tr>
                                <th>الرقم</th>
                                <th>الاسم كامل</th>
                                <th>اسم المستخدم</th>
                                <th>الإيميل</th>
                                <th>الصلاحيات</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody class="table-border-bottom-0">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@(index++)</td>
                                    <td> @string.Join(" ",item.firstName,item.lastName)</td>
                                    <td>@item.UserName</td>
                                    <td>@item.Email</td>
                                    <td>@string.Join(",",item.Roles.ToList())</td>
                                    <th>
                                        <div class="dropdown">
                                            <button type="button" class="btn dropdown-toggle hide-arrow p-0" data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">

                                                <a asp-action="ManageRole" asp-route-id="@item.Id" class="dropdown-item" id="confirmText">
                                                    <i class="bx bxs-edit-alt icon-padding edit-color" aria-hidden="true"></i>
                                                   إدارة الصلاحيات
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('هل تريد حذف هذا الحقل؟')" class="dropdown-item" id="confirmText">
                                                    <i class="bx bxs-trash-alt icon-padding delet-color" aria-hidden="true"></i>
                                                    حذف
                                                </a>





                                            </div>
                                        </div>
                                    </th>



                                </tr>
                            }


                        </tbody>
                    </table>
                </div>
            </div>


        </div>
    </div>
</div>



