@model UserRolesViewModel
@{
    ViewData["Title"] = "إدارة الصلاحيات";
}

<form method="post" >
    <div class="card mt-4">
        <div class="card-header">
            <h2>
                @Model.UserName
            </h2>
            إضافة/تعديل صلاحية
        </div>
        <div class="card-body">
            <input type="hidden" asp-for="UserId" />
            @for(int i = 0; i < Model.Roles.Count; i++)
            {
                <div class="form-check m-1">
                    <input  type="hidden" asp-for="@Model.Roles[i].RoleName">
                    <input asp-for="@Model.Roles[i].IsSelected " class="form-check-label">
                    @Model.Roles[i].RoleName
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>

        </div>
        <div class="card-footer ">
            <button  type="submit" class="btn btn-primary">حفظ</button>
            <a asp-action="Index" class="btn btn-secondary">إلغاء </a>
        </div>
    </div>
</form>

