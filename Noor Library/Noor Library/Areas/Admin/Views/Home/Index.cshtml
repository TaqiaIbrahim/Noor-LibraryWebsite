@model ViewModelForm

@{
    ViewData["Title"] = "الصفحة الرئيسية";
}

<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <div class="row" >
             <div class="col-md-6 col-lg-6 col-xl-4 col-xl-4 mb-4">
                <div class="card" style="height:20rem;width:20rem; object-fit:cover">
                    <div class="card-header d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">الكتب  </h5>

                    </div>
                    <div class="card-body">
                        <ul class="p-0 m-0">
                            @foreach (var item in Model.books)
                            {
                                <li class="d-flex mb-4">
                                    <div class="avatar avatar-sm flex-shrink-0 me-3">
                                        <img src="@string.Format("/uploads/Covers/{0}",item.Cover)" alt="Cover" class="rounded-circle">
                                    </div>
                                    <div class="gap-2 d-flex flex-wrap justify-content-between align-items-center w-100">
                                        <div class="me-2">
                                            <p class="lh-1 mb-0">@item.Title</p>
                                            <small class="text-muted">@item.Category.Name</small>
                                        </div>

                                    </div>
                                </li>

                            }
                           
                           
                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-md-6 col-lg-6 col-xl-4 col-xl-4 mb-4">
                <div class="card" style="height:20rem;width:20rem; object-fit:cover">
                    <div class="card-header d-flex justify-content-between align-items-center mb-3">
                        <h5 class="card-title mb-0">المؤلفين </h5>

                    </div>
                    <div class="card-body">
                        <ul class="p-0 m-0">
                            @foreach (var item in Model.authors)
                            {
                                <li class="d-flex mb-4">
                                    <div class="avatar avatar-sm flex-shrink-0 me-3">
                                        <img src="@string.Format("/uploads/Images/{0}",item.Image)" alt="author" class="rounded-circle">
                                    </div>
                                    <div class="gap-2 d-flex flex-wrap justify-content-between align-items-center w-100">
                                        <div class="me-2">
                                            <p class="lh-1 mb-0">@item.Name</p>
                                            <small class="text-muted"></small>
                                        </div>

                                    </div>
                                </li>
                            }
                          
                            
                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-xxl-3 col-md-6 col-lg-6 col-xl-6 mb-4">
                <div class="card" style="height:20rem;width:20rem; object-fit:cover">
                    <div class="card-header">
                        <h5 class="card-title mb-0">الإحصائيات</h5>
                    </div>
                    <div class="card-body">
                        <ul class="p-0 m-0">
                            <li class="d-flex pb-2 mb-4">
                                <div class="avatar avatar-sm flex-shrink-0 me-3">
                                    <span class="avatar-initial bg-label-primary rounded-circle"><i class="bx bx-book"></i></span>
                                </div>
                                <div class="d-flex flex-column w-100">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>عددالكتب </span>
                                        <span class="text-muted">@ViewBag.BookCount</span>
                                    </div>
                                    <div class="progress" style="height: 6px">
                                        <div class="progress-bar bg-primary" style="width: 40%" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex pb-2 mb-4">
                                <div class="avatar avatar-sm flex-shrink-0 me-3">
                                    <span class="avatar-initial bg-label-success rounded-circle"><i class="bx bx-user"></i></span>
                                </div>
                                <div class="d-flex flex-column w-100">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>عدد مؤلفو الكتب</span>
                                        <span class="text-muted">@ViewBag.AuthorCount</span>
                                    </div>
                                    <div class="progress" style="height: 6px">
                                        <div class="progress-bar bg-success" style="width: 80%" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex pb-2 mb-4">
                                <div class="avatar avatar-sm flex-shrink-0 me-3">
                                    <span class="avatar-initial bg-label-warning rounded-circle"><i class="bx bx-category"></i></span>
                                </div>
                                <div class="d-flex flex-column w-100">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>عدد أقسام الكتب</span>
                                        <span class="text-muted">@ViewBag.CategoryCount</span>
                                    </div>
                                    <div class="progress" style="height: 6px">
                                        <div class="progress-bar bg-warning" style="width: 80%" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </li>
                            <li class="d-flex mb-2">
                                <div class="avatar avatar-sm flex-shrink-0 me-3">
                                    <span class="avatar-initial bg-label-danger rounded-circle"><i class="bx bx-comment"></i></span>
                                </div>
                                <div class="d-flex flex-column w-100">
                                    <div class="d-flex justify-content-between mb-1">
                                        <span>عددالتعليقات</span>
                                        <span class="text-muted">@ViewBag.contactCount</span>
                                    </div>
                                    <div class="progress" style="height: 6px">
                                        <div class="progress-bar bg-danger" style="width: 25%" role="progressbar" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

     


        <!-- / Content -->



        <div class="content-backdrop fade"></div>
    </div>
    <!-- Content wrapper -->
</div>
<!-- / Layout page -->
         



        