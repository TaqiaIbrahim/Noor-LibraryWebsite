@model Author

<!-- Modal -->
<div class="modal fade bg-white" id="templatemo_search" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="w-100 pt-1 mb-5 text-right">
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <form action="" method="get" class="modal-content modal-body border-0 p-0">
            <div class="input-group mb-2">
                <input type="text" class="form-control" id="inputModalSearch" name="q" placeholder="Search ...">
                <button type="submit" class="input-group-text bg-success text-light">
                    <i class="fa fa-fw fa-search text-white"></i>
                </button>
            </div>
        </form>
    </div>
</div>



<!-- Open Content -->
<section class="bg-light">
    <div class="container pb-5">
        <div class="row">
            <div class="col-lg-5 mt-5">
                <div class="card mb-3">
                    <img class="card-img img-fixed" src="@string.Format("/uploads/Images/{0}",Model.Image)" alt="Card image cap" id="product-detail">
                </div>
                
            </div>
            <!-- col end -->
            <div class="col-lg-7 mt-5">
                <div class="card">
                    <div class="card-body">
                        <h1 class="h2">@Model.Name</h1>
                        <p class="h3 py-2"></p>

                        <ul class="list-inline">
                            <li class="list-inline-item">
                                <h3>نبذه عن المؤلف:</h3>
                            </li>
                            <li class="list-inline-item">
                                <p class="text-muted"><strong></strong></p>
                            </li>
                        </ul>

                        <h6></h6>
                        <p>@Model.AboutHim</p>

                        


                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Close Content -->


<div class="container py-5">
    <div class="row mt-5 ">
        @if(Model.Books !=null&& Model.Books.Any())
        {  @foreach (var item in Model.Books)
            {

                <div class="col-md-3 mt-5">
                    <div class="card mb-4 product-wap rounded-0">
                        <div class="card rounded-0">
                            <img class="card-img rounded-0 img-fluid" src="@string.Format("/uploads/Covers/{0}",item.Cover)" style=" height:25rem;width:20rem; object-fit:cover">
                            <div class="card-img-overlay rounded-0 product-overlay d-flex align-items-center justify-content-center">
                                <ul class="list-unstyled">
                                    <li><a class="btn btn-success text-white" asp-controller="Book" asp-action="download" asp-route-Id="@item.Id"><i class="fas fa-download"></i></a></li>
                                    <li><a class="btn btn-success text-white mt-2" asp-controller="Book" asp-action="Details" asp-route-Id="@item.Id"> <i class="far fa-eye"></i></a></li>
                                    <li><a class="btn btn-success text-white mt-2" asp-controller="Book" asp-action="Read" asp-route-Id="@item.Id"><i class="fas fa-book-open"></i></a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="card-body">
                            <a href="shop-single.html" class="h3 text-decoration-none">@item.Title</a>
                            <ul class="w-100 list-unstyled d-flex justify-content-between mb-0">
                                <li>@item.Author.Name</li>
                                <li class="pt-2">
                                    <span class="product-color-dot color-dot-red float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-blue float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-black float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-light float-left rounded-circle ml-1"></span>
                                    <span class="product-color-dot color-dot-green float-left rounded-circle ml-1"></span>
                                </li>
                            </ul>
