                    <i class="text-warning fa fa-star"></i>
                    <i class="text-warning fa fa-star"></i>
                    <i class="text-muted fa fa-star"></i>
                    <i class="text-muted fa fa-star"></i>
                    </li>
                    </ul> *@
                            <p class="text-center mb-0"></p>
                        </div>
                    </div>
                </div>

            }
            
        }
        else
        {
            <p>لاتوجد كتب لهذا المؤلف</p>
        }
       
      
    </div>


